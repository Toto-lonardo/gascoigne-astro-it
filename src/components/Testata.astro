---
import { Image } from "astro:assets";
import { localizePath } from "astro-i18next";
import { LanguageSelector } from "astro-i18next/components";
import GascoigneLogo from "../../public/gascoignelogo.webp";
import { Menu } from "../components/Menu";
---

<div class="bg-red-900">
  <div class="flex flex-row justify-between items-center">
    <a href={localizePath("/")}>
      <Image
        class="p-4"
        src={GascoigneLogo}
        alt="Gascoigne Pub Logo"
        width={150}
      />
    </a>
    <div class="">
      <LanguageSelector
        showFlag={false}
        languageMapping={{ en: "English" }}
        class="bg-red-900 text-white text-lg"
        aria-label="Language Selector - Seleziona la lingua"
      />
    </div>
    <nav class="xl:block hidden" aria-label="desktop navigation menu">
      <ul
        class="flex flex-col md:flex-row gap-4 items-center justify-center text-2xl text-white mr-2"
      >
        <li class="flex gap-4">
          <a href="/">Home</a>
        </li>
        <li class="flex gap-4">
          <a href="/menu">Menu</a>
        </li>
        <li class="flex gap-4">
          <a href="/events">Events</a>
        </li>
        <li class="flex gap-4">
          <a href="/contact">Contact</a>
        </li>
      </ul>
    </nav>
    <Menu client:media="(max-width: 1280px)">
      <a slot="home" href="/">Home</a>
      <a slot="menu" href="/menu">Menu</a>
      <a slot="events" href="/events">Events</a>
      <a slot="contact" href="/contact">Contact</a>
    </Menu>
  </div>
</div>
