---
import Layout from "../layouts/Layout.astro";
import Features from "../components/Features.astro";
import { Image } from "astro:assets";
import Cover from "../../public/cover.webp";
import { t, changeLanguage } from "i18next";
import { Trans } from "astro-i18next/components";

changeLanguage("en");
---

<Layout title={t("home.title")}>
  <main class="bg-red-900">
    <div class="">
      <div
        class="bg-no-repeat bg-cover md:bg-center bg-bottom h-[70vh] bg-[url('/hero.jpg')]"
      >
        <div
          class="h-[70vh] rounded-b bg-gradient-to-b from-red-600/50 via-white/20 to-black/80 flex flex-col justify-between items-center"
        >
          <div class="p-4 mx-auto max-w-screen-lg">
            <h2 class="my-4 font-marker text-2xl md:text-5xl text-white">
              {t("home.quote")}
            </h2>
            <p
              class="md:text-5xl text-3xl text-gray-800 font-marker self-start"
            >
              Paul Gascoigne
            </p>
          </div>
        </div>
      </div>
      <div class="bg-white w-full p-6 py-6">
        <Trans i18nKey="home.first">
          <p class="text-black text-lg">
            <span class="font-bold">Gascoigne Pub</span> has been a reference
            point for discerning customers and music lovers for over ten years.
          </p>
        </Trans>
        <p class="text-black text-lg pt-4">
          {t("home.second")}
        </p>
        <Features />
      </div>
    </div>
    <div
      class="flex md:flex-row flex-col items-center divide-white border-t-white"
    >
      <Image
        src={Cover}
        alt={"Entrance of the pub"}
        class="relative lg:w-1/2"
      />
      <div
        class="flex flex-col justify-center items-center p-8 mx-auto md:gap-4"
      >
        <p
          class="font-marker text-white p-8 max-w-sm md:max-w-lg text-center text-2xl lg:text-4xl"
        >
          {t("home.third")}
        </p>
        <button
          class="rounded-2xl animate-bounce bg-white text-red-900 font-bold w-28 text-xl py-3 px-4 text-right"
        >
          <a href="contact">Come on over!</a>
        </button>
      </div>
    </div>
  </main>
</Layout>
